  <!--   HIDES AND SHOWS THE MOBILE FILTER ON CLICK -->
        <script>
      $('.filter-go').click(function() {
        $('#mobile-cart-filter').hide();
      })
     $('#mobile-filter-wrapper').click(function() {
        $('#mobile-cart-filter').show();
      })
    </script>