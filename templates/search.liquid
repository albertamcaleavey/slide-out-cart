    <main id="page">	     
	    <section class="content double-accent-padding background-white">
    	    <div class="wrap">
        	    <div>
                    {% if search.performed %}
                        {% if search.results_count == 0 %}  
                        <div class="centered">
                            <p class="subscript tac">We could not find any products matching <strong>{{ search.terms | escape }}</strong>.</h3>  
                            <div id="search-form" style="margin: 0 auto; width: fit-content;">
                    	        <form action="/search" class="">
                                    <input type="text" name="q" placeholder="find products" value="{{ search.terms }}" style="padding: 10px;" >
                                    <input type="submit" value="search" style="text-transform: uppercase;font-size: 11pt;">
                                    <input type="hidden" name="type" value="product">
                                </form>
                            </div>
                        </div>
                        {% else %}  
                        <p class="subscript double-accent-padding-so">Search results for <strong>{{ search.terms | escape }}</strong>:</p>
                           <section class="row double-padding-tbo">

                            {% for product in search.results %}{%- comment %}<locksmith:a1c0>{% endcomment -%}{%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: search, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}{%- comment %}</locksmith:a1c0>{% endcomment -%}{% include 'wlm-search' with product %}
                                {% unless product.tags contains "wholesale" %}
                                  {% if product.available %}
                                    {% include 'search-grid-item' %}
                                  {% endif %}
                                {% endunless %}
                            {% endfor %}
                           </section>
          
                        {% endif %}
               
                    {% else %}
                    <div class="centered">
                        <p>Search our products below.</p>  
                        <div id="search-form">
                	        <form action="/search" class="clearfix">
                                <input type="text" name="q" placeholder="Find products" value="{{ search.terms }}">
                                <input type="submit" value="Go">
                                <input type="hidden" name="type" value="product">
                            </form>
                        </div>
                    </div>
                    {% endif %}
        	    </div>
    	    </div>
	    </section>
    </main>

